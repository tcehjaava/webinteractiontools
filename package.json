{
    "name": "websight",
    "version": "0.1.0",
    "description": "Web browsing capabilities for AI agents via MCP",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "format": "prettier --write \"src/**/*.ts\" \"*.json\" \"*.js\"",
        "format:check": "prettier --check \"src/**/*.ts\" \"*.json\" \"*.js\"",
        "lint": "eslint \"src/**/*.ts\"",
        "lint:fix": "eslint \"src/**/*.ts\" --fix"
    },
    "keywords": [
        "mcp",
        "ai",
        "web-automation",
        "playwright"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.17.0",
        "playwright": "^1.54.1",
        "sharp": "^0.34.3",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "@types/node": "^24.1.0",
        "@types/sharp": "^0.31.1",
        "@typescript-eslint/eslint-plugin": "^8.38.0",
        "@typescript-eslint/parser": "^8.38.0",
        "eslint": "^9.32.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.3",
        "prettier": "^3.6.2",
        "tsx": "^4.20.3",
        "typescript": "^5.8.3"
    }
}
