{
    "name": "@tcehjaava/webinteractiontools",
    "version": "0.1.2",
    "description": "Web browsing capabilities for AI agents via MCP",
    "main": "dist/index.js",
    "type": "module",
    "bin": {
        "webinteractiontools": "./dist/index.js"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "format": "prettier --write \"src/**/*.ts\" \"*.json\" \"*.js\"",
        "format:check": "prettier --check \"src/**/*.ts\" \"*.json\" \"*.js\"",
        "lint": "eslint \"src/**/*.ts\"",
        "lint:fix": "eslint \"src/**/*.ts\" --fix",
        "check": "npm run lint && npm run format:check && npm run build",
        "prepublishOnly": "npm run check",
        "postinstall": "playwright install chromium"
    },
    "keywords": [
        "mcp",
        "ai",
        "web-automation",
        "playwright",
        "model-context-protocol",
        "claude"
    ],
    "author": "",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tcehjaava/webinteractiontools.git"
    },
    "bugs": {
        "url": "https://github.com/tcehjaava/webinteractiontools/issues"
    },
    "homepage": "https://github.com/tcehjaava/webinteractiontools#readme",
    "files": [
        "dist/",
        "README.md",
        "LICENSE"
    ],
    "engines": {
        "node": ">=18"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.17.0",
        "playwright": "^1.54.1",
        "sharp": "^0.34.3",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "@types/node": "^24.1.0",
        "@types/sharp": "^0.31.1",
        "@typescript-eslint/eslint-plugin": "^8.38.0",
        "@typescript-eslint/parser": "^8.38.0",
        "eslint": "^9.32.0",
        "prettier": "^3.6.2",
        "tsx": "^4.20.3",
        "typescript": "^5.8.3"
    }
}
